@model BookViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutBooks";
}
<style>
    .card {
      flex-direction: row;
      align-items: center;
      height:200px;
      width:800px;
      padding:10px 5px;
      margin-bottom: 10px;
      background-color:	#F5F5DC;
    }
    .card-title {
      font-weight: bold;
    }
    a {
      border: none;
      margin:2px;
    }
    .card-body {
      padding: 10px 20px;
    }
    .card-body .card-text {
      display:block;
      text-align: justify;
      text-justify: inter-word;
      overflow:hidden;
      max-height:100px;
      width:550px;
      margin: 0;
    }
    .card img {
      height: 180px;
      width: 150px; 
    }
</style>

